##########
# Tests for reading and writing parquet files with bloom filters
##########

# enable bloom filters
statement ok
set datafusion.execution.parquet.bloom_filter_enabled = true;

# create a single parquet file
# Note filename 2.parquet to test sorting (on local file systems it is often listed before 1.parquet)
statement ok
COPY  (
  SELECT
    column1 as x,
    column2 as y
  FROM ( VALUES
    (1, 1),
    (2, 1),
    (3, 2),
    (4, 2),
    (5, 3)
  )
 )
 TO 'test_files/scratch/parquet_bloom/t.parquet'
(FORMAT PARQUET, SINGLE_FILE_OUTPUT true);

statement ok
CREATE EXTERNAL TABLE t (
  x int,
  y int
)
STORED AS PARQUET
LOCATION 'test_files/scratch/parquet_bloom/t.parquet';

query II
select * from t;
----
1 1
2 1
3 2
4 2
5 3
